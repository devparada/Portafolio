---
const { nombre, color_bg, color } = Astro.props;
---

<button class="lenguajes" style={`--color-bg: ${color_bg}; --color: ${color}`}
  >{nombre}</button
>

<style>
  .lenguajes {
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg);
    color: var(--color);
    font-weight: bold;
    font-size: 0.75rem;
    border-radius: 25px;
  }
</style>
