---
const { nombre, color_bg, color } = Astro.props;
---

<button class="lenguajes" style={`--color-bg: ${color_bg}; --color: ${color}`}
  >{nombre}</button
>

<style>
  .lenguajes {
    background-color: var(--color-bg);
    color: var(--color);
    font-weight: bold;
    font-size: 14px;
    border: 1px solid var(--color-bg);
    border-radius: 25px;
    padding: 1px 16px 1px 16px;
    margin: 2px;
  }
</style>
