    urlImg: "/src/assets/ritmos-proyecto.png",
    categoria: "Bot Development",
    descripcion:
      "Bot de música que permite a los usuarios disfrutar de su música en Discord",
    lenguajes: [
      {
        nombre: "NodeJS",
        color_bg: "#339933",
        color: "white",
      },
      {
        nombre: "JavaScript",
        color_bg: "#F7DF1E",
      },
      {
        nombre: "Discord.js",
        color_bg: "#5865F2",
        color: "white",
      },
    ],
  },
  {
    nombre: "TresEnrayaJS",
    urlCodigo: "https://github.com/devparada/TresEnRayaJS",
    urlDemo: "https://tresenrayajs.vercel.app",
    urlImg: "/src/assets/tresenrayajs-proyecto.png",
    categoria: "Game Development",
    descripcion: "Tres en raya realizado usando HTML5, JavaScript y Bootstrap",
    lenguajes: [
      {
        nombre: "HTML5",
        color_bg: "#E34F26",
        color: "white",
      },
      {
        nombre: "CSS3",
        color_bg: "#1572B6",
        color: "white",
      },
      {
        nombre: "JavaScript",
        color_bg: "#F7DF1E",
      },
    ],
  },
  {
    nombre: "TaskVelocity",
    urlCodigo: "https://github.com/devparada/taskvelocity",
    urlImg: "/src/assets/taskvelocity-proyecto.png",
    categoria: "Web Application",
    descripcion:
      "Proyecto de fin de ciclo que gestiona tareas y proyectos de cada usuario",
    lenguajes: [
      {
        nombre: "PHP",
        color_bg: "#777BB4",
        color: "white",
      },
      {
        nombre: "MySQL",
        color_bg: "#4479A1",
        color: "white",
      },
      {
        nombre: "Bootstrap",
        color_bg: "#7952B3",
        color: "white",
      },
    ],
  },
