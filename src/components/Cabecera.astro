---
import Boton from "./Boton.astro";
---

<header class="bg-white w-full">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-4 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="https://devparada.vercel.app">
        <p class="text-2xl font-bold">Raúl Parada</p>
      </a>
    </div>
    <div class="hidden lg:flex lg:gap-x-8">
      <a
        href="#sobre-mi"
        class="text-sm/6 font-semibold text-gray-900 hover:underline underline-offset-4"
        >Sobre mí</a
      >
      <a
        href="#proyectos"
        class="text-sm/6 font-semibold text-gray-900 hover:underline underline-offset-4"
        >Proyectos</a
      >
      <a
        href="#habilidades"
        class="text-sm/6 font-semibold text-gray-900 hover:underline underline-offset-4"
        >Habilidades</a
      >
      <a
        href="#contacto"
        class="text-sm/6 font-semibold text-gray-900 hover:underline underline-offset-4"
        >Contacto</a
      >
    </div>
    <div class="lg:flex lg:flex-1 lg:justify-end">
      <Boton url="#contacto" texto="Contáctame" />
    </div>
  </nav>
</header>
