---
const { nombre, descripcion, urlImg } = Astro.props;
---

<article class="habilidades">
  <img
    class="center mb-0.5"
    width="48"
    height="48"
    src={urlImg}
    alt=`Icono ${nombre}`
  />
  <h3 class="text-2xl font-bold mb-0.5">{nombre}</h3>
  <p class="text-gray-500 habilidad-descripcion">{descripcion}</p>
</article>

<style>
  .habilidades {
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .habilidad-descripcion {
    line-height: 1.6;
    margin-top: 0.6rem;
    margin-bottom: 0.6rem;
    margin-right: 0.5rem;
    margin-left: 0.5rem;
    font-size: 15px;
  }
</style>
